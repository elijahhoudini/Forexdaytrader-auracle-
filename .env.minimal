# MINIMAL CONFIGURATION - Only these two variables are required
WALLET_PRIVATE_KEY=your_solana_private_key_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# SAFETY SETTING - Keep enabled for testing
DEMO_MODE=true

# OPTIONAL: Add if you want enhanced Telegram features
# TELEGRAM_CHAT_ID=your_telegram_chat_id_here
# TELEGRAM_ENABLED=true

# OPTIONAL: Add if you have premium services (will use free alternatives otherwise)
# PURCHASED_RPC=your_premium_rpc_endpoint
# MORALIS_API_KEY=your_moralis_api_key
# DATABASE_URI=your_postgresql_connection_string

# OPTIONAL: Trading parameters (has defaults)
# MAX_BUY_AMOUNT_SOL=0.01
# PROFIT_TARGET_PERCENTAGE=0.20
# STOP_LOSS_PERCENTAGE=-0.05
# SCAN_INTERVAL_SECONDS=60
# MAX_DAILY_TRADES=50
# MAX_OPEN_POSITIONS=10