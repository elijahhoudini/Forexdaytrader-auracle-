# Streamlined Environment Configuration for Solana Trading Bot
# Enhanced with Autonomous AI Trader settings

# Required Configuration (mandatory)
WALLET_PRIVATE_KEY={wallet_private_key}
TELEGRAM_BOT_TOKEN={telegram_bot_token}

# Enhanced Telegram Configuration
TELEGRAM_CHAT_ID={telegram_chat_id}
TELEGRAM_ADMIN_CHAT_ID={telegram_admin_chat_id}
TELEGRAM_ADMIN_USERS={admin_user1,admin_user2}
TELEGRAM_AUTH_PASSWORD={telegram_auth_password}
TELEGRAM_ENABLED=true

# Live Trading Mode
LIVE_MODE=false

# Premium RPC/WebSocket Endpoints (fallback to free if not provided)
PURCHASED_RPC={purchased_rpc}
PURCHASED_WSS={purchased_wss}
MORALIS_API_KEY={moralis_api_key}
DATABASE_URI={database_uri}

# Security Settings
CLEAR_PRIVATE_KEY_AFTER_LOAD=true
MIN_WALLET_BALANCE_SOL=0.01
MAX_API_ERRORS=10
API_ERROR_WINDOW_MINUTES=5

# External API Keys for Token Blacklist
RUGCHECK_API_KEY={rugcheck_api_key}
SOLSNIPER_API_KEY={solsniper_api_key}

# Optional Bot Configuration (has sensible defaults)
BOT_USER_NAME={bot_user_name}
BOT_NAME={bot_name}
DOG_SCANNER_BOT={dog_scanner_bot}

# Optional Account Configuration (for advanced features)
REWARD_ACCOUNT={reward_account}
TAX_ACCOUNT={tax_account}

# Enhanced Trading Configuration
DEMO_MODE=true
MAX_BUY_AMOUNT_SOL=0.001
PROFIT_TARGET_PERCENTAGE=0.20
STOP_LOSS_PERCENTAGE=-0.05
SCAN_INTERVAL_SECONDS=60
MAX_DAILY_TRADES=50
MAX_OPEN_POSITIONS=10

# Risk Management
MAX_PRICE_IMPACT_PERCENT=2.0
DEFAULT_SLIPPAGE_BPS=100
MAX_RETRY_ATTEMPTS=3
EXECUTION_TIMEOUT_SECONDS=10

# Performance Monitoring
LOG_LEVEL=INFO
ENABLE_PERFORMANCE_LOGGING=true
TRADE_JOURNAL_ENABLED=true

# Network Configuration
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com
FALLBACK_RPC_1=https://solana-api.projectserum.com
FALLBACK_RPC_2=https://rpc.ankr.com/solana

# Derived Configuration (auto-calculated from private key)
WALLET_ADDRESS={wallet_address}