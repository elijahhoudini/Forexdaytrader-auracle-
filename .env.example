# AURACLE Forex Trading Bot Environment Configuration
# Forex-focused AI trading system
# Set FOREX_DEMO_MODE=true for safe testing

# ==============================================
# FOREX TRADING CONFIGURATION (REQUIRED)
# ==============================================

# Trading Mode - Set to true for safe testing
FOREX_DEMO_MODE=true
AUTONOMOUS_TRADING=false

# Forex API Keys (at least one required)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here
OANDA_API_TOKEN=your_oanda_api_token_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here

# Trading Pairs (comma-separated)
TRADING_PAIRS=EURUSD,GBPUSD,USDJPY,USDCHF,AUDUSD,USDCAD,NZDUSD

# ==============================================
# TELEGRAM NOTIFICATIONS (OPTIONAL)
# ==============================================

TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==============================================
# RISK MANAGEMENT SETTINGS
# ==============================================

FOREX_ACCOUNT_BALANCE=10000
MAX_RISK_PER_TRADE=0.02
MAX_FOREX_POSITIONS=3
DAILY_LOSS_LIMIT=200
MAX_POSITION_SIZE=0.10

# ==============================================
# OPTIONAL FEATURES
# ==============================================

# MetaTrader Integration
MT5_ENABLED=false
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here

# Web Dashboard
DASHBOARD_ENABLED=false
DASHBOARD_PORT=5000

# Cloud Logging
CLOUDWATCH_ENABLED=false
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1