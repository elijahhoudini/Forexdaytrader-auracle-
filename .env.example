# Streamlined Environment Configuration for Solana Trading Bot
# Only requires wallet private key and Telegram bot token for basic functionality

# Required Configuration (mandatory)
WALLET_PRIVATE_KEY={wallet_private_key}
TELEGRAM_BOT_TOKEN={telegram_bot_token}

# Optional Configuration (enhanced features)
TELEGRAM_CHAT_ID={telegram_chat_id}
TELEGRAM_ENABLED=true

# Optional Premium Features (fallback to free alternatives if not provided)
PURCHASED_RPC={purchased_rpc}
PURCHASED_WSS={purchased_wss}
MORALIS_API_KEY={moralis_api_key}
DATABASE_URI={database_uri}

# Optional Bot Configuration (has sensible defaults)
BOT_USER_NAME={bot_user_name}
BOT_NAME={bot_name}
DOG_SCANNER_BOT={dog_scanner_bot}

# Optional Account Configuration (for advanced features)
REWARD_ACCOUNT={reward_account}
TAX_ACCOUNT={tax_account}

# Trading Configuration (has sensible defaults)
DEMO_MODE=true
MAX_BUY_AMOUNT_SOL=0.01
PROFIT_TARGET_PERCENTAGE=0.20
STOP_LOSS_PERCENTAGE=-0.05
SCAN_INTERVAL_SECONDS=60
MAX_DAILY_TRADES=50
MAX_OPEN_POSITIONS=10

# Derived Configuration (auto-calculated from private key)
WALLET_ADDRESS={wallet_address}
SOLANA_RPC_ENDPOINT=https://api.mainnet-beta.solana.com