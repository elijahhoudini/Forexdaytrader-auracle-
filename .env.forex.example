# AURACLE Forex Trading Bot Environment Configuration
# LIVE TRADING ONLY - REAL MONEY TRADING CONFIGURATION
# WARNING: This bot only supports LIVE TRADING with real money - NO SIMULATION MODES

# ==============================================
# FOREX TRADING CONFIGURATION (REQUIRED)
# ==============================================

# Trading Mode - LIVE TRADING ONLY
# WARNING: This bot executes REAL trades with REAL money
AUTONOMOUS_TRADING=true

# Forex API Keys (at least one required)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here
OANDA_API_TOKEN=your_oanda_api_token_here
OANDA_ACCOUNT_ID=your_oanda_account_id_here

# Trading Pairs (comma-separated)
TRADING_PAIRS=EURUSD,GBPUSD,USDJPY,USDCHF,AUDUSD,USDCAD,NZDUSD

# Account Settings
FOREX_ACCOUNT_BALANCE=10000
MAX_RISK_PER_TRADE=0.02
MAX_FOREX_POSITIONS=5
MAX_CONCURRENT_POSITIONS=3

# Trading Intervals and Limits
SCAN_INTERVAL_SECONDS=300
MAX_DAILY_TRADES=10
DAILY_LOSS_LIMIT=200
MAX_POSITION_SIZE=0.10

# ==============================================
# METATRADER INTEGRATION (LIVE TRADING)
# ==============================================

MT5_ENABLED=true
MT5_LOGIN=your_live_mt5_login_here
MT5_PASSWORD=your_live_mt5_password_here
MT5_SERVER=your_live_mt5_server_here

# ==============================================
# WEBHOOK INTEGRATION (OPTIONAL)
# ==============================================

FOREX_WEBHOOK_URL=https://your-broker-webhook-url.com/api/trade

# ==============================================
# TELEGRAM NOTIFICATIONS (OPTIONAL)
# ==============================================

TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ==============================================
# RISK MANAGEMENT SETTINGS
# ==============================================

# Daily limits
MAX_DAILY_LOSS=500
MAX_DRAWDOWN=1000

# Position sizing
POSITION_SIZE_METHOD=fixed
KELLY_CRITERION_ENABLED=false

# Stop loss and take profit (as multipliers)
DEFAULT_STOP_LOSS_PIPS=50
DEFAULT_TAKE_PROFIT_PIPS=150
TRAILING_STOP_ENABLED=true

# ==============================================
# TECHNICAL ANALYSIS SETTINGS
# ==============================================

# Signal thresholds
SIGNAL_CONFIDENCE_THRESHOLD=60
RSI_OVERSOLD_THRESHOLD=30
RSI_OVERBOUGHT_THRESHOLD=70

# Moving averages
MA_FAST_PERIOD=12
MA_SLOW_PERIOD=26
MA_SIGNAL_PERIOD=9

# Bollinger Bands
BB_PERIOD=20
BB_STD_DEV=2.0

# Trend strength
ADX_TREND_THRESHOLD=25
MIN_TREND_STRENGTH=20

# ==============================================
# TIMEFRAME SETTINGS
# ==============================================

# Primary analysis timeframe
PRIMARY_TIMEFRAME=1hour
SECONDARY_TIMEFRAME=4hour
QUICK_SCALP_TIMEFRAME=15min

# Historical data periods
ANALYSIS_PERIODS=100
MIN_HISTORY_REQUIRED=50

# ==============================================
# LOGGING AND MONITORING
# ==============================================

LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/auracle_forex.log
TRADE_LOG_PATH=./logs/trades.csv

# Performance tracking
ENABLE_PERFORMANCE_TRACKING=true
DAILY_REPORT_TIME=17:00
WEEKLY_REPORT_DAY=friday

# ==============================================
# BACKUP AND DATA STORAGE
# ==============================================

DATA_STORAGE_PATH=./data/forex
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ==============================================
# ADVANCED FEATURES (OPTIONAL)
# ==============================================

# Currency strength analysis
CURRENCY_STRENGTH_ENABLED=true
CORRELATION_ANALYSIS_ENABLED=true

# News sentiment analysis
NEWS_SENTIMENT_ENABLED=false
NEWS_API_KEY=your_news_api_key_here

# Economic calendar integration
ECONOMIC_CALENDAR_ENABLED=false
CALENDAR_API_KEY=your_calendar_api_key_here

# ==============================================
# DEVELOPMENT AND TESTING
# ==============================================

# Live Trading Only - No Simulation Modes Available
DEBUG_MODE=false
VERBOSE_LOGGING=false
SAVE_RAW_DATA=false

# ==============================================
# LEGACY SOLANA SETTINGS (DISABLED)
# ==============================================

# These are kept for reference but disabled
WALLET_PRIVATE_KEY=disabled_for_forex_trading
SOLANA_RPC_ENDPOINT=disabled_for_forex_trading
JUPITER_API_ENABLED=false

# ==============================================
# QUICK SETUP FOR LIVE TRADING ONLY
# ==============================================

